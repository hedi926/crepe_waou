{
    "name": "ecommerce/site",
    "description": "Site e-commerce pour la vente de cigarettes Ã©lectroniques",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "altorouter/altorouter": "^2.0",
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('vendor/autoload.php') || copy('vendor/autoload.php', 'vendor/autoload.php');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
